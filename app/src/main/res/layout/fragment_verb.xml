<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:id="@+id/verbs">

    <TextView
        android:id="@+id/v"
        android:layout_width="290dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="@string/verbs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/theory_verbs"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/button_border"
        android:layout_marginBottom="168dp"
        android:text="@string/theory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="verb_theory"/>

    <Button
        android:id="@+id/exercises_verbs"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="@string/exercise"
        android:background="@drawable/button_border"
        app:layout_constraintBottom_toTopOf="@+id/theory_verbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v"
        app:layout_constraintVertical_bias="0.695"
        android:onClick="verb_practice"/>
</androidx.constraintlayout.widget.ConstraintLayout>